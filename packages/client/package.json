{
  "name": "@decent/client",
  "version": "0.0.0",
  "description": "Standalone web client for Decent",
  "main": "index.js",
  "repository": "https://github.com/decent-chat/decent/tree/master/packages/client",
  "keywords": [
    "chat",
    "chat-system",
    "social",
    "decent"
  ],
  "author": "Multiple contributors",
  "license": "GPL-3.0",
  "dependencies": {
    "choo": "^6.6.1",
    "choo-devtools": "^2.3.3",
    "mrk.js": "^1.0.1",
    "nanobus": "^4.3.2",
    "prismjs": "^1.9.0"
  },
  "devDependencies": {
    "browserify": "^15.1.0",
    "css-extract": "^1.2.0",
    "dependency-check": "^2.10.0",
    "pretty-bytes-cli": "^2.0.0",
    "sheetify": "^6.2.0",
    "sheetify-nested": "^1.0.2",
    "tinyify": "^2.4.0",
    "watchify": "^3.9.0",
    "yo-yoify": "^4.3.0"
  },
  "scripts": {
    "build": "browserify src/app.js -o dist/bundle.js -g yo-yoify -t [ sheetify -u sheetify-nested ] -p [ css-extract -o dist/bundle.css ] -p tinyify && cat dist/bundle.js | gzip --best > dist/bundle.js.gz && cat dist/bundle.js.gz | wc -c | pretty-bytes",
    "watch": "watchify src/app.js -o dist/decent.js -d -t [ sheetify -u sheetify-nested ] -p [ css-extract -o dist/bundle.css ] -v",
    "prepublishOnly": "npm run build",
    "test": "dependency-check . --entry src/app.js --missing --unused --no-dev -i sheetify"
  }
}
